		{

			$('#passerr').html("{{ i18n.__("Error: Enter your encryption password") }}");
	
		}
		else
		{

			$('#viewbutton').show();
			$('#viewprogress').hide();
				
			window.emitMessage('getAccountKeys', $('#password').val(), function(accountInfo) {

				if (accountInfo.address)
				{
			
